@{
    Layout = "~/Views/Shared/_Layout_Admin.cshtml";
}

<div ng-controller="pageList">
    <table id="dt" class="display">
        <thead>
            <tr>
                <th>序号</th>
                <th>标题</th>
                <th>操作</th>
            </tr>
        </thead>
        <tbody>
            <tr ng-repeat="d in data" on-render-finished>
                <td>{{$index+1}}</td>
                <td>{{d.title}}</td>
                <td>
                    <a class="btn btn-sm btn-primary" href="/Admin/PageAdd?id={{d.id}}">编辑</a>
                    <button class="btn btn-sm btn-danger" ng-click="delete(d)">删除</button>
                </td>
            </tr>
        </tbody>
    </table>
</div>